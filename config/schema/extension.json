{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "main": {
            "type": "string"
        },
        "src_main": {
            "type": "string"
        },
        "src_directory": {
            "type": "string"
        },
        "build_directory": {
            "type": "string"
        },
        "language": {
            "type": "string",
            "enum": [
                "typescript",
                "javascript"
            ]
        },
        "build_command": {
            "type": "string"
        },
        "resources": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "readmeFileName": {
            "default": "README.md",
            "type": "string"
        },
        "package_data": {
            "type": "object",
            "properties": {
                "version": {
                    "type": "string"
                },
                "author": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "email"
                            ],
                            "additionalProperties": false
                        }
                    ]
                }
            },
            "required": [
                "version"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "name",
        "id",
        "readmeFileName",
        "package_data"
    ],
    "additionalProperties": false
}