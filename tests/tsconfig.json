{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2022",
        "module": "CommonJS",
        "types": ["node"],
        "lib": ["ES2022", "DOM"],
        "resolveJsonModule": true,
        "newLine": "lf",
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["../src/*"]
        }
    },
    "include": ["./**/*.ts", "../src/**/*.ts"]
}
